<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.edkul.vimal.edkul.Subscribe_Course">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subscribeCourse"
        android:id="@+id/textView17"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/instituteName"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:id="@+id/textView18"
        android:layout_marginTop="117dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/instituteSpinner"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignLeft="@+id/courseSpinner"
        android:layout_alignStart="@+id/courseSpinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/courseName"
        android:textSize="30sp"
        android:id="@+id/textView19"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/textView18"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/courseSpinner"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribeText"
        android:id="@+id/subscribeButton"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:textSize="25sp"
        android:background="@drawable/custom_button"/>
</RelativeLayout>
