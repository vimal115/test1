<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pic5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.edkul.vimal.edkul.Student_Signup"
    tools:showIn="@layout/activity_student__signup"
    android:id="@+id/studentSignup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/studentSignup"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/studentName"
        android:ems="10"
        android:textColor="#33b5e5"
        android:textSize="25sp"
        android:width="300dp"
        android:padding="5dp"
        android:id="@+id/studentName"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColorHint="@android:color/holo_blue_light"
        android:width="300dp"
        android:padding="5dp"
        android:textSize="25sp"
        android:id="@+id/studentEmail"
        android:hint="@string/studentEmail"
        android:layout_below="@+id/studentName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHint="@android:color/holo_blue_light"
        android:width="300dp"
        android:textSize="25sp"
        android:padding="5dp"
        android:id="@+id/studentPassword"
        android:layout_marginTop="15dp"
        android:hint="@string/studentPassword"
        android:layout_below="@+id/studentEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHint="@android:color/holo_blue_light"
        android:width="300dp"
        android:textSize="25sp"
        android:padding="5dp"
        android:id="@+id/studentCpassword"
        android:layout_marginTop="70dp"
        android:hint="@string/studentcPassword"
        android:layout_below="@+id/studentEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:width="300dp"
        android:textSize="25sp"
        android:padding="5dp"
        android:hint="@string/studentContact"
        android:textColorHint="@android:color/holo_blue_light"
        android:id="@+id/studentContact"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/studentCpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/studentInstitute"
        android:ems="10"
        android:width="300dp"
        android:textSize="25sp"
        android:padding="5dp"
        android:textColor="#33b5e5"
        android:id="@+id/studentInstitute"
        android:layout_below="@+id/studentContact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submitStudent"
        android:id="@+id/submitStudent"
        android:layout_marginTop="46dp"
        android:textSize="25sp"
        android:onClick="addButtonClicked"
        android:background="@drawable/custom_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/studentContact" />

</RelativeLayout>
